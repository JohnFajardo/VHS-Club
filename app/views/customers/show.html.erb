<h1><%= @customer.name %>'s Profile Page</h1>
<p><%= link_to "Return To Customers List", customers_path %></p>
<hr>

<p><strong>E-mail: </strong><%= @customer.username %></p>

<% if @current_customer.id == @customer.id %>

  <%= link_to "Edit Profile", edit_customer_path %> |
  <%= link_to "Delete Account", customer_path, method: :delete %>
  <br><br>

  <p><strong>Rented Movies</strong></p>
  <ul>
    <% @customer.rentals.each do |rental| %>
      <li>
        <%= link_to "#{rental.movie.title}", rental_path(rental.id) %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Rent a Movie", movies_path %>

<% else %>

  <p><strong>Rented Movies</strong></p>
  <ul>
    <% @customer.rentals.each do |rental| %>
      <li>
        <%= link_to "#{rental.movie.title}", rental_path(rental.id) %>
      </li>
    <% end %>
  </ul>

<% end %>
