<h1>Login</h1>

<%= form_tag "/login" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <br>

  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <br>

  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <br>

  <%= submit_tag "Login" %>
<% end %>

<%= link_to "New Customer", new_customer_path %>
